.home-top {
  position: relative;
  padding: 60rpx 23rpx;
}
.home-top_container {
  position: relative;
  height: 500rpx;
  width: 100%;
  border-radius: 18rpx;
  background-color: #fff;
  box-shadow: 5rpx 5rpx 20rpx rgba(0, 0, 0, .05);
}
.home-top-info_box {
  position: relative;
  height: 314rpx;
  border-bottom: 1px solid #e3e3e3;
}
.home-top-info_height {
  position: absolute;
  left: 40rpx;
  top: 30rpx;
  text-align: center;
}
.home-top-info_weight {
  position: absolute;
  right: 40rpx;
  top: 30rpx;
  text-align: center;
}
.home-top-info_title1 {
  color: #000;
}
.home-top-info_title1 text {
  color: #898989;
}
.home-top-info_value1 {
  color: #3da2fe;
  font-size: 40rpx;
}
.home-top-info_avatar {
  position: absolute;
  left: calc(50% - 114rpx);
  top: -44rpx;
  height: 218rpx;
  width: 218rpx;
  padding: 20rpx;
  font-size: 0;
  border-radius: 50%;
  background: #fff;
  box-sizing: border-box;
}
.home-top-info_avatar image {
  width: 178rpx;
  height: 178rpx;
  border-radius: 50%;
}
.home-top-info_E {
  position: absolute;
  left: 47rpx;
  top: 177rpx;
  color: #f1f1f1;
  font-size: 102rpx;
  line-height: 1;
}
.home-top-info_name {
  position: absolute;
  left: 0;
  top: 174rpx;
  width: 100%;
  font-size: 40rpx;
  color: #000;
  line-height: 1;
  text-align: center;
}
.home-top-info_lastTime {
  position: absolute;
  top: 294rpx;
  left: calc(50% - 178rpx);
  color: #acacac;
  font-size: 20rpx;
  line-height: 20rpx;
  border: 1px solid #d6d6d6;
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
  background: #fff;
  width: 354rpx;
}
.home-top-info_leftEye {
  position: absolute;
  left: 0;
  bottom: 0;
  height: 183rpx;
  width: 353rpx;
  border-right: 1px solid #d6d6d6;
  padding-top: 45rpx;
  padding-left: 45rpx;
  box-sizing: border-box;
}
.home-top-info_rightEye {
  position: absolute;
  right: 0;
  bottom: 0;
  height: 183rpx;
  width: 353rpx;
  padding-top: 45rpx;
  padding-left: 45rpx;
  box-sizing: border-box;
}
.home-top-info_title2 {
  color: #000;
  font-size: 25rpx;
}
.home-top-info_value2 {
  color: #3da2fe;
  font-size: 70rpx;
  display: inline-block;
  width: 200rpx;
  text-align: center;
}
.home-tabs-container {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin: 28rpx 0;
  background: #fff;
  border-radius: 24rpx;
  padding: 16rpx;
}
.home-tabs-item {
  width: 206rpx;
  height: 234rpx;
  font-size: 0;
  border-radius: 16rpx;
}
.home-tabs-item:active {
  background: rgba(0, 0, 0, .05);
}
.home-tabs-item image {
  width: 100%;
  height: 100%;
}

.setting-container {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 9;
}
.setting-mask {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, .1);
}
.setting-content {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  border-radius: 30rpx 30rpx 0 0;
  padding: 50rpx 40rpx;
}
.setting-content__bar {
  box-sizing: border-box;
  width: 100%;
  display: flex;
  justify-content: space-around;
  text-align: center;
}
.setting-content__item {
  width: 134rpx;
  color: #bbb;
  font-size: 24rpx;
}
.setting-content__item image {
  width: 80rpx;
  height: 80rpx;
}
.setting-content__item .active {
  color: #000;
}
.setting-content__1 {
  padding: 10rpx 180rpx 60rpx;
  display: flex;
  justify-content: space-between;
}
.setting-content__1 image {
  width: 110rpx;
  height: 110rpx;
}
.setting-content__2 {
  padding: 10rpx 0 60rpx;
}
.setting-content__2 .item {
  width: 110rpx;
  height: 110rpx;
  margin: 0 auto;
  border-radius: 50%;
  background: #018fff;
  color: #fff;
  text-align: center;
  line-height: 110rpx;
}
.setting-content__3 {
  padding-bottom: 60rpx;
}
.setting-content__3 .title {
  padding-bottom: 10rpx;
}
.setting-content__3 .title text {
  color: #018fff;
}
.setting-content__3 slider {
  position: relative;
  padding: 0 40rpx;
  font-size: 26rpx;
  color: #bbb;
}
.setting-content__3 slider::before {
  position: absolute;
  content: '4.0';
  left: -35rpx;
  top: 0;
}
.setting-content__3 slider::after {
  position: absolute;
  content: '5.3';
  top: 0;
  right: -35rpx;
}
.setting-content__4 slider::before {
  content: '3';
}
.setting-content__4 slider::after {
  content: '10';
}
.setting-content__5 slider::before {
  content: '';
}
.setting-content__5 slider::after {
  content: '';
}
.setting-content__5 .img {
  position: absolute;
  top: 0;
  width: 40rpx;
  height: 40rpx;
}
.setting-content__5 .img1 {
  left: -35rpx;
}
.setting-content__5 .img2 {
  right: -35rpx;
}
.btn-container {
  padding-top: 46rpx;
}