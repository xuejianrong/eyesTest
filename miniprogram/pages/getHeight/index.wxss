.get-height-top {
  position: relative;
  width: 706rpx;
  margin: 48rpx auto 0;
  border-radius: 18rpx;
  background-color: #fff;
  box-shadow: 5rpx 5rpx 20rpx rgba(0, 0, 0, .05);
  padding-top: 157rpx;
  padding-bottom: 62rpx;
}
.get-height-avatar {
  position: absolute;
  left: calc(50% - 109rpx);
  top: -44rpx;
  width: 178rpx;
  height: 178rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 20rpx solid #fff;
  background-color: #fff;
}
.get-height-avatar image {
  width: 100%;
  height: 100%;
}
.get-height-name {
  color: #000;
  font-size: 36rpx;
  text-align: center;
  line-height: 84rpx;
}
.get-height-title{
  line-height: 90rpx;
  text-align: center;
  color: #000;
  font-size: 44rpx;
  margin-top: 40rpx;
}
.get-height-value {
  font-size: 105rpx;
  color: #3da2fe;
  line-height: 1;
  padding: 32rpx 0;
  border: 1px solid #dedede;
  border-radius: 20rpx;
  width: 450rpx;
  margin: 0 auto;
  text-align: center;
}
.get-height-value text {
  font-size: 56rpx;
}

.btn-main {
  margin-top: 28rpx;
}