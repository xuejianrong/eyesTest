/* miniprogram/pages/result/index.wxss */
page {
  padding-bottom: 100rpx;
}
.result {
  display: flex;
  justify-content: space-between;
  padding: 80rpx 58rpx;
}
.result .item {
  width: 240rpx;
  height: 240rpx;
  box-sizing: border-box;
  border: 18rpx solid #f3f3f3;
  border-radius: 50%;
  box-shadow: 0 0 0 18rpx #018fff;
  background: #fff;
  text-align: center;
  padding-top: 35rpx;
}

.text1 {
  color: #999;
  font-size: 26rpx;
}
.text2 {
  color: #018fff;
  font-size: 60rpx;
  line-height: 70rpx;
  font-weight: bold;
}
.text3 {
  color: #000;
  font-size: 24rpx;
  font-weight: bold;
}
.text4 {
  color: #018fff;
  font-size: 30rpx;
  padding-top: 8rpx;
}
.btn-area {
  padding: 0 40rpx;
}
.btn {
  font-size: 32rpx;
  margin-bottom: 40rpx;
  background: #ddd;
  color: #999;
}
.btn:active {
  background: rgba(221, 221, 221, 0.795);
}
.btn-main {
  background: #018fff;
  color: #fff;
}
.btn-main:active {
  background: #0191ffd3;
}
.detail {
  padding: 20rpx 40rpx 0;
  display: flex;
  justify-content: space-between;
}
.detail .ceil {
  width: 320rpx;
}
.detail .detai-title {
  position: relative;
  color: #000;
  font-size: 30rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
}
.detail .detai-title::before {
  content: '';
  position: absolute;
  top: 10rpx;
  left: 65rpx;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
}
.detail-left .detai-title::before {
  background: #ffa9a9;
}
.detail-right .detai-title::before {
  background: #85c4ff;
}
.detai-list .item {
  position: relative;
  padding: 20rpx 30rpx;
  box-shadow: 2rpx 2rpx 15rpx rgb(209, 209, 209);
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}
.detai-list .item .index {
  position: absolute;
  left: 30rpx;
  top: 26rpx;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  font-size: 24rpx;
  line-height: 30rpx;
  text-align: center;
  color: #fff;
}
.detail-left .detai-list .item .index {
  background: #ffa9a9;
}
.detail-right .detai-list .item .index {
  background: #85c4ff;
}
.detai-list .nothing {
  text-align: center;
  color: 45rpx;
  color: #ccc;
  line-height: 116rpx;
  height: 116rpx;
}
.text5 {
  font-size: 28rpx;
  color: #ccc;
  text-align: right;
}
.color1 {
  color: #018fff;
  margin-right: 10rpx;
}
.color2 {
  color: #e45050;
}
.text6 {
  color: #000;
  font-size: 24rpx;
  text-align: center;
  margin-top: 10rpx;
}
.text7 {
  font-size: 48rpx;
}

